set laststatus=2                      " always show status line

syntax on
colorscheme croesch

" Enable line numbers
set number
set relativenumber

" Enable wildmenu
set wildmenu

" Indention without hard tabs
set expandtab
set shiftwidth=2
set softtabstop=2

set showmatch           " Show matching brackets.
set incsearch           " Incremental search
set hlsearch            " highlight searched things

